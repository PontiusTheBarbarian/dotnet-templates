{
    "$schema": "http://json.schemastore.org/template",
    "author": "Liam Appleyard",
    "classifications": [
        "Solution",
        "C#"
    ],
    "identity": "Template.Solution",
    "name": "Template Solution",
    "shortName": "tmp-sln",
    "sourceName": "Template.Solution",
    "preferNameDirectory": true,
    "tags": {
        "language": "C#",
        "type": "item"
    },
    "guids": [
        "374E3A14-5200-4FD3-83DA-A291C29B17BD"
    ],
    "sources": [
        {
            "source": "./",
            "target": "./",
            "modifiers": [
                {
                    "condition": "true",
                    "exclude": [
                        ".vs/**/*",
                        ".vscode/**/*"
                    ]
                }
            ]
        }
    ],
    "symbols": {
        "SkipRestore": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false",
            "description": "If specified, skips the automatic restore of the project once created"
        }
    },
    "postActions": [
        {
            "condition": "(!SkipRestore)",
            "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
            "description": "Restore NuGet packages required by this project.",
            "manualInstructions": [
                {
                    "text": "Run 'dotnet restore'"
                }
            ],
            "continueOnError": false
        },
        {
            "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
            "description ": "Creates the default folder structure",
            "args": {
                "executable": "setup.cmd"
            },
            "manualInstructions": [
                {
                    "text": "Run 'setup.cmd'"
                }
            ],
            "continueOnError": true
        }
    ]
}